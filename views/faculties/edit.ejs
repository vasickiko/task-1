<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>Edit Faculty</title>
</head>
<body>
    <h1>Edit Faculty</h1>

    <form action="/faculties/<%= faculty._id %>/update" method="POST">
        <label>Name:</label>
        <input type="text" name="name" value="<%= faculty.name %>" required>

        <label>Address:</label>
        <input type="text" name="address" value="<%= faculty.address %>" required>

        <label>University:</label>
        <select name="universityId" required>
            <% universities.forEach(u => { %>
                <option 
                    value="<%= u._id %>"
                    <%= u._id.toString() === faculty.university.toString() ? "selected" : "" %>
                >
                    <%= u.name %>
                </option>
            <% }) %>
        </select>

        <button type="submit">Save changes</button>
    </form>

    <a href="/faculties">Back</a>
</body>
</html>
